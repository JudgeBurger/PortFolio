{% extends 'base.html.twig' %}

{% block title %}
    Damien C. | Contact
{% endblock %}


{% block body %}
    <div class="container">
        {{ form_start(form) }}
        <div class="m-5">
            <div class="mt-5">
                {{ form_row(form.firstname) }}
            </div>
            <div class="mt-5">
                {{ form_row(form.lastname) }}
            </div>
            <div class="mt-5">
                {{ form_row(form.email) }}
            </div>
            <div class="mt-5">
            {{ form_row(form.phoneNumber) }}
            </div>
            <div class="mt-5">
                {{ form_row(form.company) }}
            </div>
            <div class="mt-5">
                {{ form_row(form.message) }}
            </div>
            <button class="btn btn-outline-dark mt-5">Envoyer Votre Message</button>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}

